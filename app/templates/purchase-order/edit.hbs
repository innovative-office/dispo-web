<div class="col-md-12">
  <div class="card">
    <div class="card-block">
      <h4 class="card-title">Edit VK {{model.baanId}}</h4>
    </div>
    <div class="card-block">
      <form>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">VK</label>
          <div class="col-sm-10">
            {{input value=model.baanId classNames="form-control"}}
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Versand am</label>
          <div class="col-sm-10">
            {{input value=model.deliveryDate type="date" classNames="form-control"}}
          </div>
        </div>
        <div class="form-group row">
          <div class="offset-sm-2 col-sm-10">
            <button class="btn btn-outline-primary" {{action 'save'}}>Speichern</button>
            <button class="btn btn-outline-secondary" {{action 'abort'}}>Abbrechen</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
{{outlet}}
