<div class="row">
  <div class="col-md-3">
    <div class="card">
      <div class="card-block">
        <h4 class="card-title">Versand <small class="text-muted">{{#link-to 'cargo-list.edit' model}}{{model.id}}{{/link-to}}</small></h4>
        <p class="card-text"><small class="text-muted">Spediteur:<br>{{model.shipper.name}}</small></p>
      </div>
      <img alt="Chart?cht=qr&amp;chs=154x154&amp;chl={{model.id}}" class="img-fluid" src="https://chart.googleapis.com/chart?cht=qr&amp;chs=130x130&amp;chl={{model.id}}">
    </div>
  </div>
  <div class="col-md-9">
    <div class="row">
      {{outlet}}
    </div>
    <div class="card">
      <div class="card-block">
        <h6 class="card-subtitle text-muted clearfix">
          Angef체gte Paletten / Coli
          <div class="pull-sm-right">
            <button type="button" name="externalPallet" class="btn btn-outline-warning btn-sm" {{action "showModal" "bootstrap-modal" pallet}}>
              <i class="fa fa-external-link"></i>
            </button>
            <button type="button" name="buildPallet" class="btn btn-outline-warning btn-sm" {{action "buildPallet" pallet}}>
              <i class="fa fa-file-o"></i>
            </button>
          </div>
        </h6>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th>Nr</th>
            <th>Positionen</th>
            <th>Mehrplatz</th>
            <th>Tour</th>
            <th>Gebiet</th>
            <th>Empf채nger</th>
            <th style="width: 160px;"></th>
          </tr>
        </thead>
        <tbody>
          {{#each model.pallets as |pallet|}}
            <tr>
              <td scope="row">{{pallet.palletType.readAs}} {{pallet.id}}</td>
              <td>{{pallet.lineItemsQuantity}}</td>
              <td>{{pallet.additionalSpace}}</td>
              <td>{{pallet.shippingRoute.name}}</td>
              <td>{{pallet.zipLocation.title}}</td>
              <td>{{pallet.shippingAddress.consigneeFull}}</td>
              <td class="text-xs-center">
                {{input type="checkbox" name="isAdmin" checked=isAdmin}}
              </td>
            </tr>
          {{/each}}
        </tbody>
        <tfoot>
          <tr>
            <td colspan="6">
            </td>
            <td>
              <div class="input-group">
                <button class="btn btn-outline-primary btn-block" type="button" {{action 'assignItems'}} disabled={{hasLineItems}}><i class="fa fa-floppy-o" aria-hidden="true"></i></button>
              </div>
            </td>
          </tr>
        </tfoot>
      </table>
    </div>

    <div class="card">
      <div class="card-block">
        <h6 class="card-subtitle text-muted clearfix">
          Verf체gbare Paletten / Coli
          <div class="pull-sm-right">
            <button type="button" name="externalPallet" class="btn btn-outline-warning btn-sm" {{action "showModal" "bootstrap-modal" pallet}}>
              <i class="fa fa-external-link"></i>
            </button>
            <button type="button" name="buildPallet" class="btn btn-outline-warning btn-sm" {{action "buildPallet" pallet}}>
              <i class="fa fa-file-o"></i>
            </button>
          </div>
        </h6>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th>Nr</th>
            <th>Positionen</th>
            <th>Mehrplatz</th>
            <th>Tour</th>
            <th>Gebiet</th>
            <th>Empf채nger</th>
            <th style="width: 160px;"></th>
          </tr>
        </thead>
        <tbody>
          {{#each availablePallets as |pallet|}}
            <tr>
              <td scope="row">{{pallet.palletType.readAs}} {{pallet.id}}</td>
              <td>{{pallet.lineItemsQuantity}}</td>
              <td>{{pallet.additionalSpace}}</td>
              <td>{{pallet.shippingRoute.name}}</td>
              <td>{{pallet.zipLocation.title}}</td>
              <td>{{pallet.shippingAddress.consigneeFull}}</td>
              <td class="text-xs-center">
                {{input type="checkbox" name="isAdmin" checked=isAdmin}}
              </td>
            </tr>
          {{/each}}
        </tbody>
        <tfoot>
          <tr>
            <td colspan="6">
            </td>
            <td>
              <div class="input-group">
                <button class="btn btn-outline-primary btn-block" type="button" {{action 'assignItems'}} disabled={{hasLineItems}}><i class="fa fa-floppy-o" aria-hidden="true"></i></button>
              </div>
            </td>
          </tr>
        </tfoot>
      </table>
    </div>


  </div>
</div>
