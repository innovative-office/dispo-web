<div class="row">
  <div class="col-md-12">
    <div class="col-md-12">
      <h3 class="clearfix">
        Purchase Positions
        <hr>
      </h3>
    </div>
    <div class="col-md-4">
      {{outlet}}
    </div>
    <div class="col-md-12">
      <div class="card">
        <div class="card-block">
          <h4 class="card-title">Card title</h4>
          <h6 class="card-subtitle text-muted">Support card subtitle</h6>
        </div>
        <div class="card-block">
          <table class="table">
            <thead>
              <tr>
                <th>VK</th>
                <th>
                  Versand
                </th>
              </tr>
            </thead>
            <tbody>
              {{#each model as |purchasePosition|}}
                <tr>
                  <td scope="row">{{#link-to "purchase-position.edit" purchasePosition}}{{purchasePosition.baanId}}{{/link-to}}</td>
                  <td>
                    {{moment-format purchaseOrder.deliveryDate "DD-MM-YYYY" allow-empty=true}}
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
