<div class="col-md-12">
  <div class="block-header p-t-2">
    <h3>Pallet {{model.id}}</h3>
    <ul class="actions">
      <li>
        <button type="button" name="destroyPallet" {{action 'destroyPallet' model}} class="btn btn-link">
          <i class="fa fa-trash-o" aria-hidden="true"></i>
        </button>
      </li>
    </ul>
  </div>

  <div class="card">
    <div class="card-block">
      <form>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Zusatz</label>
          <div class="col-sm-10">
            {{input value=model.additionalSpace classNames="form-control"}}
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Versendet</label>
          <div class="col-sm-10">
            {{input type="checkbox" name="model.delivered" checked=model.delivered}}
          </div>
        </div>
        <div class="form-group row">
          <div class="offset-sm-2 col-sm-10">
            <button class="btn btn-outline-primary" {{action 'save'}}>Speichern</button>
            <button class="btn btn-outline-secondary" {{action 'abort'}}>Abbrechen</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
{{outlet}}
